@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model AuthenticationDataModel

@{
    var empNo = ViewData["empNo"] as string;

}

<section id="login-container">
    <div class="container-fluid">
        <div class="row login-bg d-flex flex-row-reverse">
            <div class="col-12 col-md-5 col-lg-3 login-form ">
                <div class="inner-container bg-white p-3 rounded-3">
                    <form action="/login/Validation" method="Post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @* Header *@
                        <div class="login-header text-center mt-3 mb-4">
                            <p class="fw-bold text-muted welcome-msg">Account Verification</p>
                            <small><p>Please provide the following details to verify your account</p></small>
                        </div>

                        <br />


                        @* Form Input *@
                        <div class="form-group mb-2">
                            <label asp-for="VEmpNumber" class=" control-label"></label>
                            <input asp-for="VEmpNumber"  class="form-control" value="@empNo" disabled />
                        </div>

                        <div class="row mb-2">

                            <div class="form-group col-6">
                                <label asp-for="Position_" class="control-label"></label>
                                <input asp-for="Position_" class="form-control" />
                                <span asp-validation-for="Position_" class="text-danger"></span>
                            </div>

                            <div class="form-group col-6">
                                <label asp-for="MovNumber"  class="control-label"></label>
                                <input asp-for="MovNumber" class="form-control" />
                                <span asp-validation-for="MovNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2">

                            <div class="form-group col-6">
                                <label asp-for="SecLicense" class="control-label">Sec License No.</label>
                                <input asp-for="SecLicense" class="form-control" />
                                <span asp-validation-for="SecLicense" class="text-danger"></span>
                            </div>

                            <div class="form-group col-6">
                                <label asp-for="DateHired" class="control-label">Date Hired</label>
                                <input asp-for="DateHired" type="date" class="form-control" />
                                <span asp-validation-for="DateHired" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group mb-2">
                            <label asp-for="VPassword" class="control-label"></label>
                            <input asp-for="VPassword" class="form-control" type="password" />
                            <span asp-validation-for="VPassword" class="text-danger"></span>
                        </div>

                        <input type="submit" value="Validate and Continue" class=" mt-4 btn btn-success w-100" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
