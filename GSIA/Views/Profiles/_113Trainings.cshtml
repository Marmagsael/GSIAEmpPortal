@model GSIA.Models.Pis.EmpmasUiModel

@{
    Layout = "~/Views/Shared/Pis/_PisLayout.cshtml";
    <link rel="stylesheet" href="~/css/pis/_mainContent.css" asp-append-version="true" />
    ViewData["Title"] = "Trainings";
}

<div class="main-content-wrapper">
    <div class="mc-padding">
        <h2 class="page-title ">Trainings</h2>
    </div>
    <hr class="divider" />

    <div class="row">
        <div class=" col-12">
            <form asp-action="Trainings">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mc-padding">
                    @* --- Employee's Image ---*@
                    <div class="img-wrapper"><i class="fa-solid fa-user-tie"></i></div>
                    <div class="form-group">
                        <label asp-for="Empnumber" class="control-label"></label>
                        <div class="col-md-8 col-lg-1">
                            <input asp-for="Empnumber" class="form-control" disabled />
                            <span asp-validation-for="Empnumber" class="text-danger err-input-msg"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <label asp-for="Emplastnm" class="control-label"></label>
                        <div class="col-md-8 col-lg-3">
                            <input asp-for="Emplastnm" class="form-control" disabled />
                            <span asp-validation-for="Emplastnm" class="text-danger err-input-msg"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Empfirstnm" class="control-label"></label>
                        <div class="col-md-8 col-lg-3">
                            <input asp-for="Empfirstnm" class="form-control" disabled />
                            <span asp-validation-for="Empfirstnm" class="text-danger err-input-msg"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Empmidnm" class="control-label"></label>
                        <div class="col-md-8 col-lg-3">
                            <input asp-for="Empmidnm" class="form-control" disabled />
                            <span asp-validation-for="Empmidnm" class="text-danger err-input-msg"></span>
                        </div>
                    </div>
                </div>

                @*----- TRAINING / SEMINAR ATTENDED ------- *@
                <div class="section-category-wrapper"><h5 class="section-category"> Trainings / Seminar Attended</h5></div>

                <div class="mc-padding">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Emplastnm" class="control-label"></label>
                                <div class="col-md-8 col-lg-6">
                                    <input asp-for="Emplastnm" class="form-control" type="date" disabled />
                                    <span asp-validation-for="Emplastnm" class="text-danger err-input-msg"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label asp-for="Emplastnm" class="control-label"></label>
                                <div class="col-md-8 col-lg-6">
                                    <input asp-for="Emplastnm" class="form-control" disabled />
                                    <span asp-validation-for="Emplastnm" class="text-danger err-input-msg"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Emplastnm" class="control-label"></label>
                                <div class="col-md-8 col-lg-6">
                                    <input asp-for="Emplastnm" class="form-control" disabled />
                                    <span asp-validation-for="Emplastnm" class="text-danger err-input-msg"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="Emplastnm" class="control-label"></label>
                                <div class="col-md-8 col-lg-6">
                                    <input asp-for="Emplastnm" class="form-control" disabled />
                                    <span asp-validation-for="Emplastnm" class="text-danger err-input-msg"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Emplastnm" class="control-label"></label>
                                <div class="col-md-8 col-lg-3">
                                    <select asp-for="Emplastnm" class="form-select" disabled>
                                        <option>1</option>
                                        <option>2</option>
                                    </select>
                                    <span asp-validation-for="Emplastnm" class="text-danger err-input-msg"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

         

        </div>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
